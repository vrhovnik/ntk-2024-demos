FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY ["NTK24/NTK24.Web/", "NTK24.Web/"]

RUN dotnet restore "NTK24/NTK24.Web.csproj"

COPY . .

WORKDIR "/src/"
RUN dotnet restore "NTK24/NTK24.Web.csproj"
RUN dotnet build "NTK24/NTK24.Web.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "NTK24/NTK24.Web.csproj" -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 as final
WORKDIR /app
ENV ASPNETCORE_HTTP_PORTS=80
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "NTK24.Web.dll"]